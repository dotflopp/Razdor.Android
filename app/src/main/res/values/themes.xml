<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ZoV_Android" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background and surface colors -->
        <item name="android:windowBackground">@color/black</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">#343438</item>
        <!-- Navigation Panel -->
        <item name="android:navigationBarColor">#2E2E32</item>

        <!-- Customize text fields -->
        <item name="textInputStyle">@style/OutlinedBoxStyle</item>
    </style>

    <style name="Theme.ZoV_Android" parent="Base.Theme.ZoV_Android" />
</resources>