<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ui.fragments.main.MainFragment">


    <LinearLayout
        android:id="@+id/listElement"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:background="#272525"
        tools:ignore="MissingConstraints"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iconChat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="10dp"
            android:src="@drawable/iconchat"
            android:adjustViewBounds="true"
            android:scaleType="centerInside" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/guildList"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            tools:ignore="NotSibling"
            tools:listitem="@layout/item_group_recycler_view" />

        <ImageView
            android:id="@+id/iconPlus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="0dp"
            android:src="@drawable/ic_plus"
            android:adjustViewBounds="true"
            android:scaleType="centerInside" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/listElement"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/createNewGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rounded_layout_profile"
        android:paddingBottom="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/container"
        app:layout_constraintEnd_toEndOf="@+id/container"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <TextView
            android:id="@+id/incomingCallTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Создание новой группы"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/lineInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:layout_marginHorizontal="25dp"
            app:layout_constraintTop_toBottomOf="@+id/incomingCallTitleTv"
            >

            <TextView
                android:layout_marginHorizontal="5dp"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:gravity="center"
                android:text="Название \nновой группы:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />

            <EditText
                android:id="@+id/nameGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите название группы"
                android:textColorHint="#8AFFFFFF"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:inputType="text"
                />

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acceptButton"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@color/light_green"
            android:text="Создать"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@id/cancelButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lineInfo" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelButton"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@color/red"
            android:text="Отмена"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/acceptButton"
            app:layout_constraintTop_toBottomOf="@id/lineInfo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>