<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="InvalidId"
    tools:context=".ui.fragments.main.layerOne.BaseMainFragment">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cardFooter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardFooter"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#343438"
            tools:ignore="ExtraText">

            <LinearLayout
                android:layout_width="145dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:ignore="ExtraText">

                <ImageView
                    android:id="@+id/ic_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_home" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                tools:ignore="ExtraText">

                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="5dp"
                    >



                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iconProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/mouseicon"
                        android:scaleType="centerCrop"
                        />

                    <View
                        android:id="@+id/statusIndicator"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/circle_green"
                        android:layout_gravity="bottom|end"
                        android:layout_marginEnd="30dp"/>



                </FrameLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:ignore="ExtraText">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    >

                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/iconNotify"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/iconnotify" />

                    <View
                        android:id="@+id/notificationNotify"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginEnd="45dp"
                        android:background="@drawable/circle_red"
                        android:layout_gravity="top|end" />
                </FrameLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/createNewGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rounded_layout_profile"
        android:paddingBottom="10dp"
        android:visibility="gone"
        android:layout_marginHorizontal="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/container"
        app:layout_constraintEnd_toEndOf="@+id/container"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <TextView
            android:id="@+id/nameGuild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Создание нового канала"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/lineName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:layout_marginHorizontal="25dp"
            app:layout_constraintTop_toBottomOf="@+id/nameGuild"
            >

            <TextView
                android:layout_marginHorizontal="5dp"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:gravity="center"
                android:text="Название:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />

            <EditText
                android:id="@+id/nameChannel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите название канала"
                android:textColorHint="#8AFFFFFF"
                android:textColor="@color/white"
                android:inputType="text"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:layout_marginHorizontal="25dp"
            app:layout_constraintTop_toBottomOf="@+id/lineName"
            >

            <TextView
                android:layout_marginStart="20dp"
                android:layout_marginHorizontal="5dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Тип :"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />

            <android.widget.Button
                android:id="@+id/typeButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Выберите тип канала"
                android:textColor="#000000"
                android:background="@drawable/borderless_button"
                android:foreground="?attr/selectableItemBackground"
                android:contentDescription="Выбор типа"
                android:paddingHorizontal="8dp"
                android:layout_marginStart="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineParentId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:layout_marginHorizontal="25dp"
            app:layout_constraintTop_toBottomOf="@+id/lineType"
            >

            <TextView
                android:layout_marginHorizontal="5dp"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:gravity="center"
                android:text="Id родителя:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />

            <EditText
                android:id="@+id/idParentChannel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите id родителя канала"
                android:textColorHint="#8AFFFFFF"
                android:textColor="@color/white"

                android:inputType="number"
                />

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/createButton"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@color/light_green"
            android:text="Создать"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@id/cancelButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lineParentId" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelButton"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@color/red"
            android:text="Отмена"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/createButton"
            app:layout_constraintTop_toBottomOf="@id/lineParentId" />

    </androidx.constraintlayout.widget.ConstraintLayout>

