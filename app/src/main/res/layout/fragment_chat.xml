<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#808185"
    tools:context=".ui.fragments.main.ChatFragment">


    <LinearLayout
        android:id="@+id/topChat"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#343438"
        android:gravity="start"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:text="Сообщения"
            android:textSize="20sp"
            android:textColor="@color/white"
            />

        <!--<Button
            android:id="@+id/btnConnection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Канал связи" />-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/middleChat"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#343438"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topChat"
        tools:ignore="MissingConstraints">

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/usersList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/shape_rounded_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/middleChat"
        tools:ignore="NotSibling"
        tools:listitem="@layout/item_users_recycler_view" />


</androidx.constraintlayout.widget.ConstraintLayout>