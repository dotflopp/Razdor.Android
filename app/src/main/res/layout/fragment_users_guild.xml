<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#808185"
    tools:context=".ui.fragments.main.ChatFragment">


    <LinearLayout
        android:id="@+id/topUsers"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#343438"
        android:gravity="center"
        tools:ignore="MissingConstraints"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:text="Пользователи сообщества"
            android:textSize="20sp"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/middleUsers"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#343438"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topUsers"
        tools:ignore="MissingConstraints">

        <android.widget.Button
            android:id="@+id/createInvitation"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:text="Создать приглашение в сообщество"
            android:textColor="#000000"
            android:background="@drawable/borderless_button"
            android:foreground="?attr/selectableItemBackground"
            android:contentDescription="Создать новый канал"
            android:paddingHorizontal="8dp"
            app:layout_constraintEnd_toStartOf="@id/avatarContainer"
            app:layout_constraintTop_toTopOf="@id/avatarContainer"
            app:layout_constraintBottom_toBottomOf="@id/avatarContainer"
            android:layout_marginEnd="16dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/usersList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/shape_rounded_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/middleUsers"
        tools:ignore="NotSibling"
        tools:listitem="@layout/item_users_recycler_view" />


</androidx.constraintlayout.widget.ConstraintLayout>