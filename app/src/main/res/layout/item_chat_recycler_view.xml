<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:elevation="0dp"
    app:cardElevation="0dp"
    android:layout_marginVertical="15dp"
    app:cardBackgroundColor="@android:color/darker_gray"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_rounded_background"
        >

        <FrameLayout
            android:id="@+id/anotherProfileImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/borderless_groups"
            android:visibility="gone"
            tools:visibility="visible"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_margin="5dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop" />

            <FrameLayout
                android:id="@+id/statusBorderless"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|end"
                android:foreground="@drawable/borderless_black">

                <View
                    android:id="@+id/statusIndicator"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_green" />
            </FrameLayout>

        </FrameLayout>


        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/rounded_message_background"
            android:text="Текст"
            android:textColorHint="#CDC6C6"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:maxWidth="200dp"
            android:minHeight="50dp"
            android:singleLine="false"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical"
            android:layout_gravity="center"/>

        <LinearLayout
            android:id="@+id/profileImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/borderless_groups"
            android:visibility="gone"
            tools:visibility="visible"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:background="@drawable/borderless_groups"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>