<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#808185"
    tools:context=".ui.fragments.main.layerThree.ChatFragment">


    <LinearLayout
        android:id="@+id/topChatChannel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#343438"
        android:gravity="center"
        tools:ignore="MissingConstraints"
        >

        <TextView
            android:id="@+id/chatChannel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:text="Чат канала"
            android:textSize="20sp"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/middleChatChannel"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:background="#343438"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topChatChannel"
        tools:ignore="MissingConstraints">
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="15dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_rounded_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/middleChatChannel"
        app:layout_constraintBottom_toTopOf="@id/editTextLayout"
        tools:ignore="MissingConstraints"
        tools:listitem="@layout/item_chat_recycler_view" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/editTextLayout"
        android:layout_width="0dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chatList"
        tools:ignore="MissingConstraints"
        android:background="#343438">

        <EditText
            android:id="@+id/editText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="12dp"
            android:paddingStart="10dp"
            android:paddingEnd="4dp"
            android:background="@android:color/darker_gray"
            android:hint="Введите текст..."
            android:textColorHint="#322C2C"
            android:maxLines="3"
            android:scrollbars="vertical"
            android:gravity="top|start"
            app:layout_constraintBottom_toBottomOf="@id/editTextLayout"
            app:layout_constraintTop_toTopOf="@id/editTextLayout"
            app:layout_constraintStart_toStartOf="@+id/editTextLayout"
            app:layout_constraintEnd_toStartOf="@id/attachButtonLayout"
            >

        </EditText>

        <FrameLayout
            android:id="@+id/attachButtonLayout"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/borderless_button"
            app:layout_constraintBottom_toBottomOf="@id/editTextLayout"
            app:layout_constraintEnd_toStartOf="@id/sendButtonLayout"
            app:layout_constraintTop_toTopOf="@id/editTextLayout"
            app:layout_constraintStart_toEndOf="@id/editText"
            tools:ignore="MissingConstraints">

            <android.widget.ImageButton
                android:id="@+id/attachButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_attach" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/sendButtonLayout"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/borderless_button"
            app:layout_constraintBottom_toBottomOf="@id/editTextLayout"
            app:layout_constraintEnd_toEndOf="@id/editTextLayout"
            app:layout_constraintTop_toTopOf="@id/editTextLayout"
            app:layout_constraintStart_toEndOf="@id/attachButtonLayout"
            tools:ignore="MissingConstraints">

            <android.widget.ImageButton
                android:id="@+id/sendButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_send" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>